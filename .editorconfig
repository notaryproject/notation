root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf
indent_style = space
indent_size = 2
tab_width = 2

[*.go]
indent_size = 4
tab_width = 4
indent_style = tab
# required for multiline strings in test cases
trim_trailing_whitespace = false

[Makefile]
indent_size = 4
tab_width = 4
indent_style = tab
